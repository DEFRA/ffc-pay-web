    "sass-loader": "^11.1.1",
    "standard": "^14.3.4",
    "style-loader": "^2.0.0",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll",
      "XMLHttpRequest"
    ],
    "ignore": [
      "app/dist/**/*.js",
      "test/acceptance/**/*.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
