    "sequelize": "^6.6.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.1",
    "@pact-foundation/pact": "^9.16.3",
    "@types/cheerio": "^0.22.30",
    "@types/hapi": "^18.0.6",
    "@types/jest": "^27.0.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "jest-junit": "^11.1.0",
