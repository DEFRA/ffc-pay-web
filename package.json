    "@hapi/hapi": "^20.2.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.1.0",
    "@hapi/wreck": "^17.1.0",
    "@hapi/yar": "^10.1.1",
    "@turf/turf": "^6.3.0",
    "applicationinsights": "^1.8.10",
    "blipp": "^4.0.2",
