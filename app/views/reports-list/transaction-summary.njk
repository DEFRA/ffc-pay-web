{% extends 'reports-list/base-report.njk' %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% set reportTitle = 'Combined Transaction Report' %}
{% set reportUrl = '/report-list/transaction-summary' %}
{% set formAction = '/report-list/transaction-summary/download' %}
{% block reportContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Combined Transaction Report</h1>
        <div class="govuk-form-group">
          <label class="govuk-label" for="schemeId">
            Select the scheme to view data for
          </label>
          <select class="govuk-select" id="schemeId" name="schemeId">
            {% for scheme in schemes %}
              <option value="{{scheme.schemeId}}">{{scheme.name}}</option>
            {% endfor %}
          </select>
        </div>
        <div class="govuk-form-group">
          <label class="govuk-label govuk-label--s" for="frn">
            Firm reference number (FRN) (optional)
          </label>
          <div class="govuk-hint">
            Enter a 10-digit FRN
          </div>
          <input class="govuk-input govuk-input--width-10" id="frn" name="frn" type="text" value="{{ frn }}" inputmode="numeric">
        </div>
    </div>
  </div>
{% endblock %}