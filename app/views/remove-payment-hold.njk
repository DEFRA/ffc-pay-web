{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/"
    }]
  })}}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Payment Holds</h1>

      {% if error %}
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem creating this payment request</h2>
        </div>
      {% endif %}

      {% if paymentHolds.length %}
        <table class="govuk-table">
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">FRN</th>
              <th scope="col" class="govuk-table__header">Description</th>
              <th scope="col" class="govuk-table__header">Date Added</th>              
              <th scope="col" class="govuk-table__header"></th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            {% for paymentHold in paymentHolds %}
              <tr class="govuk-table__row">
                <td class="govuk-table__cell">{{ paymentHold.frn }}</td>
                <td class="govuk-table__cell">{{ paymentHold.holdCategoryName }}</td>
                <td class="govuk-table__cell">{{ paymentHold.dateTimeAdded }}</td>              
                <td class="govuk-table__cell">
                  <form method="POST" action="/agreement/pay">
                    <input type="hidden" name="crumb" value="{{crumb}}"/>
                    <input type="hidden" id="paymentHoldId" name="paymentHoldId" value="{{ paymentHold.holdId }}">
                    <button class="govuk-button" data-module="govuk-button">Remove</button>
                  </form>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p class="govuk-body">No payment holds</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
