{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {{ govukBreadcrumbs({
    items: [
      { text: "Home", href: "/" },
      { text: "Holds", href: "/payment-holds" },
      { text: "Add", href: "/add-payment-hold" }
    ]
  })}}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <form method="POST" action="/add-payment-hold" autocomplete="off" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Add payment hold</h1>

        {% if errors %}
          <div class="govuk-error-summary" data-module="govuk-error-summary">
            <div role="alert">
              <h2 class="govuk-error-summary__title">
                There is a problem
              </h2>
              <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                  {% for errorDetail in errors.details %}
                    <li>
                      <span class="govuk-error-message"><span class="govuk-visually-hidden">Error:</span> {{ errorDetail.message }}</span>
                    </li>
                  {% endfor %}
              </ul>
            </div>
          </div>
        {% endif %}

        <div class="govuk-form-group">
          <label class="govuk-label govuk-label-s" for="frn">
            Firm reference number (FRN)
          </label>
          <div class="govuk-hint">
            Enter a 10-digit FRN
          </div>
          <input class="govuk-input govuk-input--width-10" id="frn" name="frn" type="text" value="{{ frn }}">
        </div>

        {% for group in holdCategoryRadios %}
          {{ govukRadios({
            classes: "govuk-radios--small",
            name: "holdCategoryId",
            fieldset: {
              legend: {
                text: "Select a hold category for " + group.scheme.name
              }
            },
            items: group.radios
          }) }}
        {% endfor %}

        {{ govukButton({
        text: "Create",
        attributes: {
          id: "submit"
        }
      }) }}
      </form>
    </div>
  </div>
{% endblock %}
