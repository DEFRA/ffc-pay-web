{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/"
    },{
      text: "Payment holds",
      href: "/payment-holds"
    }]
  })}}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <form method="POST" action="/add-payment-hold" autocomplete="off" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Add payment hold</h1>

        {% if errors %}
          <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
          </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                {% for errorDetail in errors.details %}
                  <span class="govuk-error-message">
                    <span class="govuk-visually-hidden">Error:</span>
                    {{ errorDetail.message }}
                  </span>
                {% endfor %}
              </ul>
            </div>
          </div>
        {% endif %}

        <div class="govuk-form-group">
          <label class="govuk-label govuk-label--m" for="frn">
            Firm Reference Number (FRN)
          </label>
          <input class="govuk-input govuk-input--width-10" id="frn" name="frn" type="text">
        </div>

        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend">
              Hold category
            </legend>
            <div class="govuk-radios" data-module="govuk-radios">
            {% for paymentHoldCategory in paymentHoldCategories %}
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="holdCategoryId" name="holdCategoryId" type="radio" value="{{ paymentHoldCategory.holdCategoryId }}">
                <label class="govuk-label govuk-radios__label" for="where-do-you-live">
                  {{ paymentHoldCategory.schemeName}} - {{ paymentHoldCategory.name}}
                </label>
              </div>
            {% endfor %}
            </div>
          </fieldset>
        </div>

        {{ govukButton({
        text: "Create",
        attributes: {
          id: "submit"
        }
      }) }}
      </form>
    </div>
  </div>
{% endblock %}
