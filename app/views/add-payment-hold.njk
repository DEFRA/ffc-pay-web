{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/"
    },{
      text: "Payment Holds",
      href: "/payment-holds"
    }]
  })}}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <form method="POST" action="/add-payment-hold" autocomplete="off" novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Add payment hold</h1>

        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">FRN</dt>
            <dd class="govuk-summary-list__value">
              {% if paymentHoldFRNs.length > 0 %}
                <select class="govuk-select" id="frn" name="frn">
                  {% for paymentHoldFRN in paymentHoldFRNs %}
                    <option value="{{ paymentHoldFRN.frn }}">{{ paymentHoldFRN.frn}} </option>
                  {% endfor %}
                </select>
              {% endif %}
            </dd>
          </div>          
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">             
                Select payment hold category
            </dt>
            <dd class="govuk-summary-list__value">
              {% if paymentHoldCategories.length > 0 %}
                <select class="govuk-select" id="holdCategory" name="holdCategory">
                  {% for paymentHoldCategory in paymentHoldCategories %}
                    <option value="{{ paymentHoldCategory.holdCategoryId }}">{{ paymentHoldCategory.name}} </option>
                  {% endfor %}
                </select>
              {% endif %}
            </dd>
          </div>
        </dl>

        {{ govukButton({
        text: "Submit",
        attributes: {
          id: "submit"
        }
      }) }}
      </form>
    </div>
  </div>
{% endblock %}
