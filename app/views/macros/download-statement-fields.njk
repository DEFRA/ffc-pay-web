{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% macro downloadPageTitle(text) %}
    <h1 class="govuk-heading-l">{{ text }}</h1>
{% endmacro %}

{% macro schemeSelect(schemes, selectedSchemeId = '') %}
    <div class="govuk-form-group">
        <label class="govuk-label govuk-label-s" for="schemeId">
            Select the scheme to view data for
        </label>
        <select class="govuk-select" id="schemeId" name="schemeId">
            <option value="" {% if not selectedSchemeId %}selected{% endif %}>Select a scheme</option>
            {% for scheme in schemes %}
                {% if scheme and scheme.schemeId is defined and scheme.name is defined %}
                    <option value="{{ scheme.schemeId }}" {% if scheme.schemeId == selectedSchemeId %}selected{% endif %}>
                        {{ scheme.name }}
                    </option>
                {% endif %}
            {% endfor %}
        </select>
    </div>
{% endmacro %}

{% macro yearInput(yearValue = '') %}
    <div class="govuk-form-group">
        <label class="govuk-label govuk-label-s" for="marketingYear">
            Marketing year
        </label>
        <input class="govuk-input govuk-input--width-4" id="marketingYear" name="marketingYear" type="text" value="{{ yearValue }}" inputmode="numeric">
    </div>
{% endmacro %}

{% macro frnInput(frnValue = '') %}
    <div class="govuk-form-group">
        <label class="govuk-label govuk-label-s" for="frn">
            Firm reference number (FRN)
        </label>
        <div class="govuk-hint">
            Enter a 10-digit FRN
        </div>
        <input class="govuk-input govuk-input--width-10" id="frn" name="frn" type="text" value="{{ frnValue }}" inputmode="numeric">
    </div>
{% endmacro %}

{% macro submitButton(label = "Search statements") %}
    <div class="govuk-button-group">
        <button id="report-submit" class="govuk-button" data-module="govuk-button">{{ label }}</button>
        <button type="button" class="govuk-button govuk-button--secondary" onclick="window.location.href='/download-statements'">Clear and start again</button>
    </div>
{% endmacro %}

{% macro dateInput(id, text, errors = {}) %}
    {{ govukDateInput({
        id: id,
        namePrefix: id,
        fieldset: {
            legend: {
                text: text
            }
        },
        hint: {
            text: "For example, 27 11 2025"
        }
    }) }}
{% endmacro %}