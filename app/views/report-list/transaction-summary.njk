{% extends 'report-list/base-report.njk' %}
{% from 'macros/report-form-fields.njk' import pageTitle, schemeSelect, yearInput, prnInput, revenueOrCapitalSelect, frnInput, submitButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set reportTitle = 'Combined Transaction Report' %}
{% set reportUrl = '/report-list/transaction-summary' %}
{% set formAction = '/report-list/transaction-summary/download' %}

{% block reportContent %}
    {{ pageTitle(reportTitle) }}
    {{ schemeSelect(schemes, selectedSchemeId) }}
    {{ yearInput(year) }}
    {{ prnInput(prn) }}
    {{ revenueOrCapitalSelect(revenueOrCapital) }}
    {{ frnInput(frn) }}
{% endblock %}
