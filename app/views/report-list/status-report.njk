{% extends 'report-list/base-report.njk' %}
{% from 'macros/report-form-fields.njk' import reportPageTitle, reportTypeSelect, startDateInput, endDateInput, submitButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set reportTitle = 'Status Report' %}
{% set reportUrl = '/report-list/status-report' %}
{% set formAction = '/report-list/status-report/download' %}
{% set reportTypeItems = [
  { value: "sfi", text: "SFI" },
  { value: "delinked", text: "Delinked" }
] %}

{% block reportContent %}
    {{ reportPageTitle(reportTitle) }}
    {{ reportTypeSelect(reportType, reportTypeItems) }}
    {{ startDateInput(errors, startDate) }}
    {{ endDateInput(errors, endDate) }}
{% endblock %}
