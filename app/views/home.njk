{% extends '_layout.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">{{ serviceName }}</h1>

      <div class="govuk-cards govuk-cards--2">
        <div class="govuk-cards--2__item govuk-card--dashboard">
          <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Payment holds</h2>
          <p class="govuk-heading-xl govuk-!-margin-bottom-5">
            {{ totalHolds }}
          </p>
          <ul class="govuk-list">
            <li>
              <a href="/payment-holds" class="govuk-link">Manage holds</a>
            </li>
          </ul>
        </div>
        <div class="govuk-cards--2__item govuk-card--dashboard">
          <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Schemes</h2>
          <p class="govuk-heading-xl govuk-!-margin-bottom-5">
            {{ totalSchemes }}
          </p>
          <ul class="govuk-list">
            <li>
              <a href="/payment-schemes" class="govuk-link">Manage schemes</a>
            </li>
          </ul>
        </div>
      </div>


      <p class="govuk-body">
        <a href="/remove-payment-hold" class="govuk-link">Remove payment hold</a>
      </p>
      <p class="govuk-body">
        <a href="/payment-schemes" class="govuk-link">View payment scheme</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}
